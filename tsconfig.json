{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022"]
  },
  "include": ["build/ts/*", "src/**/*.ts"]
}
